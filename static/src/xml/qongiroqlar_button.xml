      <button type="button"
              class="btn btn-secondary o_chatter_button"
              t-on-click="() => this.env.services.call_centerQongiroqlar.openForCurrentRecord(this)"
              title="Qo‘ng‘iroqlar">
        <i class="fa fa-phone"/>
